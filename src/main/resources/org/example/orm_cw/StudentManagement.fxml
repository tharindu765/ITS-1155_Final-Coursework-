<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.orm_cw.Controller.StudentManagementController">

    <!-- Title Label -->
    <Label layoutX="300" layoutY="20" style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Student Management" />

    <!-- Input Fields Section -->
    <VBox alignment="CENTER" layoutX="20.0" layoutY="60" prefHeight="200.0" prefWidth="860.0" spacing="10">
        <HBox alignment="CENTER" spacing="10">
            <Label text="Name:" />
            <TextField fx:id="nameField" prefHeight="24.0" prefWidth="300.0" />
        </HBox>
        <HBox alignment="CENTER" spacing="10">
            <Label text="Email:" />
            <TextField fx:id="emailField" prefHeight="24.0" prefWidth="300.0" />
        </HBox>
        <HBox alignment="CENTER" spacing="10">
            <Label text="Phone:" />
            <TextField fx:id="phoneField" prefHeight="24.0" prefWidth="300.0" />
        </HBox>

        <!-- Courses Section -->
        <HBox alignment="CENTER" spacing="10">
            <VBox spacing="10">
                <Label text="Available Courses:" />
                <ListView fx:id="availableCoursesListView" prefHeight="120.0" prefWidth="200.0" />
            </VBox>
            <VBox alignment="CENTER" spacing="10">
                <!-- Buttons for adding/removing courses -->
                <Button fx:id="addCourseButton" onAction="#addCourseToStudent" text="&gt;&gt;" />
                <Button fx:id="removeCourseButton" onAction="#removeCourseFromStudent" text="&lt;&lt;" />
            </VBox>
            <VBox spacing="10">
                <Label text="Selected Courses:" />
                <ListView fx:id="selectedCoursesListView" prefHeight="120.0" prefWidth="200.0" />
            </VBox>
        </HBox>

        <!-- Total Payment Section -->
        <HBox alignment="CENTER" layoutY="380" spacing="10">
            <Label text="Total Payment Due:" />
            <Label fx:id="totalPaymentLabel" text="0.00" />
        </HBox>

        <!-- Buttons for Actions -->
        <HBox alignment="CENTER" spacing="10">
            <Button fx:id="saveButton" onAction="#saveStudent" text="Save" />
            <Button fx:id="updateButton" onAction="#updateStudent" text="Update" />
            <Button fx:id="deleteButton" onAction="#deleteStudent" text="Delete" />
            <Button fx:id="clearButton" onAction="#clearFields" text="Clear" />
        </HBox>
    </VBox>

    <!-- TableView Section -->
    <TableView fx:id="studentTable" layoutX="50.0" layoutY="291.0" prefHeight="298.0" prefWidth="800.0">
        <columns>
            <TableColumn fx:id="studentIdColumn" prefWidth="100" text="Student ID" />
            <TableColumn fx:id="nameColumn" prefWidth="150" text="Name" />
            <TableColumn fx:id="emailColumn" prefWidth="150" text="Email" />
            <TableColumn fx:id="coursesColumn" prefWidth="244.0" text="Courses" />
            <TableColumn fx:id="phoneColumn" prefWidth="155.0" text="Phone" />
        </columns>
    </TableView>

    <!-- Back Button -->
    <Button layoutX="14.0" layoutY="14.0" onAction="#goBack" text="Back" />
</AnchorPane>
