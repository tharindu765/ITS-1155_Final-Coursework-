<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.orm_cw.Controller.DashboardController">

    <!-- Menu Bar -->
    <top>
        <MenuBar>
            <Menu text="File">
                <MenuItem onAction="#logout" text="Logout" />
            </Menu>
            <Menu text="Manage">
                <MenuItem onAction="#showStudentList" text="Students" />
                <MenuItem onAction="#showCourseList" text="Courses" />
            <MenuItem onAction="#userManage" text="Users" />
            </Menu>
        </MenuBar>
    </top>

    <!-- Content Area -->
    <center>
        <VBox alignment="CENTER" spacing="20">
            <Label style="-fx-font-size: 18px; -fx-padding: 20px; -fx-text-fill: darkslategray;" text="Welcome to the Culinary Academy Management System" />

            <HBox alignment="CENTER" spacing="30">
                <VBox alignment="CENTER" spacing="10">
                    <Label style="-fx-font-size: 16px;" text="Total Students:" />
                    <Label fx:id="studentCountLabel" style="-fx-font-size: 24px; -fx-text-fill: teal;" text="0" />
                    <Button onAction="#goToAddStudentForm" text="Add New Student" />
                </VBox>
                <VBox alignment="CENTER" spacing="10">
                    <Label style="-fx-font-size: 16px;" text="Total Courses:" />
                    <Label fx:id="courseCountLabel" style="-fx-font-size: 24px; -fx-text-fill: teal;" text="0" />
                    <Button onAction="#goToAddCourseForm" text="Add New Course" />
                </VBox>
            </HBox>
        </VBox>
    </center>
</BorderPane>
